<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/reply"
        android:layout_alignParentRight="true"
        android:text="回复了bbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/user_info"
        android:layout_toLeftOf="@id/reply"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/list_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="特别长的情况下会anfiadfadfadfadfadfafadfafasdfadfafasd"
            android:layout_toLeftOf="@+id/star_icon"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/star_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:text="【lv】"
            android:layout_toLeftOf="@+id/master_icon"
            android:maxHeight="15dp"
            android:maxWidth="42dp"/>

        <TextView
            android:id="@+id/master_icon"
            android:text="【master】"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
            android:maxHeight="15dp"
            android:maxWidth="60dp"/>

    </RelativeLayout>


</RelativeLayout>